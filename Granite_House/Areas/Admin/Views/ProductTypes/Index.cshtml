@model IEnumerable<Granite_House.Models.ProductTypes>
@{
    ViewData["Title"] = "Product types";
}

<br /> <br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product type list</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New product type</a>
    </div>
</div>

<br/>

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(pt=>pt.Name)
            </th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(pt=>item.Name)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="@item.Id"/>
                </td>
            </tr>
        }
    </table>
</div>
